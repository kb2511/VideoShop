@model WebShopAlgebra.Models.Category

@{
    ViewData["Title"] = "Delete";
}

<form asp-action="Delete">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Are you sure you want to delete this?</h2>
            <hr />
        </div>
        <div class="form-group mb-3">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" disabled class="form-control" />
        </div>
        <div class="form-group mb-3">
            <input type="submit" value="Delete" class="btn btn-danger" style="width:150px" />
            <a asp-controller="Category" asp-action="Index" class="btn btn-secondary" style="width:150px">Back to List</a>
        </div>
    </div>
</form>
